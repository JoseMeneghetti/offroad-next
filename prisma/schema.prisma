// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  phone     String?
  cep       String?
  city      String?
  state     String?
  bike      Bike[]
  equipment Equipment[]
}

model Bike {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now())
  brand     String
  model     String
  yearF     String
  yearM     String
  km        String?
  hours     String?
  price     String
  describe  String?
  user      User         @relation(fields: [userId], references: [id])
  userId    Int
  photos    BikePhotos[]
}

model BikePhotos {
  id     Int    @id @default(autoincrement())
  photo  String
  bike   Bike   @relation(fields: [bikeId], references: [id])
  bikeId Int
}

model Equipment {
  id        Int               @id @default(autoincrement())
  createdAt DateTime          @default(now())
  brand     String
  model     String
  type      String
  price     String
  describe  String?
  user      User              @relation(fields: [userId], references: [id])
  userId    Int
  photos    EquipmentPhotos[]
}

model EquipmentPhotos {
  id          Int       @id @default(autoincrement())
  photo       String
  equipment   Equipment @relation(fields: [equipmentId], references: [id])
  equipmentId Int
}
